<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#66B2FF"
        android:orientation="vertical">


        <TextView
            android:id="@+id/heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingLeft="100dp"
            android:paddingTop="20dp"
            android:text="CDショップでの会話"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/roundtxt"
            android:layout_width="299dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:background="@drawable/round"
            android:paddingLeft="90dp"
            android:text="1st Series 弟1回"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/context"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:text="友達の結婚式のBGN選曲を頼まれてCDショップへ。店員さんと相談しながら、無事購入できるでしょうか." />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#E0E0E0"
            android:orientation="vertical">


            <TextView
                android:id="@+id/modestart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="60dp"
                android:paddingTop="10dp"
                android:text="どちらのモードでスタートしますか"
                android:textColor="#CC6600" />

            <Button
                android:id="@+id/listening"
                android:layout_width="254dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/round"
                android:text="リスニングモード"
                android:textColor="#FFFFFF"
                android:onClick="selectmode"
                android:textSize="12dp" />

            <Button
                android:id="@+id/quezz"
                android:layout_width="254dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/round"
                android:text="クイズモード"
                android:textColor="#FFFFFF"
                android:onClick="selectmode"
                android:textSize="12dp" />

            <Button
                android:id="@+id/repating"
                android:layout_width="254dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="10dp"
                android:onClick="selectmode"
                android:background="@drawable/round"
                android:text="リピーティングモード＆シャドーイングモード"
                android:textColor="#FFFFFF"
                android:textSize="12dp" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>