<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
        android:background="#66B2FF">
    <TextView
        android:id="@+id/heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CDショップでの会話"
        android:paddingBottom="10dp"
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        android:paddingTop="20dp"
        android:paddingLeft="100dp"/>

    <TextView
        android:id="@+id/roundtxt"
        android:layout_width="299dp"
        android:layout_height="wrap_content"
        android:background="@drawable/round"
        android:text="1st Series 弟1回"
        android:textColor="#FFFFFF"
        android:layout_marginLeft="35dp"
        android:paddingLeft="80dp"
        />

    <TextView
        android:id="@+id/context"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:text="友達の結婚式のBGN選曲を頼まれてCDショップへ。店員さんと相談しながら、無事購入できるでしょうか."
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#E0E0E0">

        <TextView
            android:id="@+id/doyoudown"
            android:text="このエピソードをダウンロードしますか"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingLeft="50dp"
            android:textColor="#CC6600"/>

        <Button
            android:id="@+id/download"
            android:layout_width="254dp"
            android:layout_height="wrap_content"
            android:text="ダウンロード"
            android:textSize="25dp"
            android:textColor="#FFFFFF"
            android:background="@drawable/round"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:onClick="download"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="*   ダウンロードコンテンツは全て無料です。"
            android:textColor="#606060"
            android:paddingLeft="40dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"/>

    </LinearLayout>


</LinearLayout>


</LinearLayout>
